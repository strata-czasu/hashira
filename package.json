{
  "name": "hashira",
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/bun": "latest",
    "expect-type": "^0.18.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "start": "bun run --cwd apps/bot start",
    "generate": "bun --cwd packages/db run  generate",
    "migrate": "bun run --cwd packages/db migrate",
    "drizzle-studio": "bun run --cwd packages/db drizzle-studio",
    "push": "bun run --cwd packages/db push",
    "format": "bunx @biomejs/biome format . --write",
    "lint": "bunx @biomejs/biome lint . --apply",
    "organize": "bunx @biomejs/biome check . --apply",
    "fix": "bun format && bun lint && bun organize",
    "test:core": "bun test packages/core/"
  },
  "type": "module",
  "workspaces": [
    "tooling/*",
    "packages/*",
    "apps/*"
  ]
}
