{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "warn"
      },
      "complexity": {
        "useLiteralKeys": "info"
      }
    }
  },
  "formatter": {
    "lineWidth": 88,
    "enabled": true,
    "indentStyle": "space"
  }
}
