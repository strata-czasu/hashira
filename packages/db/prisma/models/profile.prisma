model ProfileSettings {
  userId        String        @id @unique
  titleId       Int?
  tintColorType TintColorType @default(default)
  tintColor     String? // For TintColorType.custom
  // TODO)) tintColorItemId? // For TintColorType.fromItem
  // TODO)) Background image

  user  User  @relation(fields: [userId], references: [id])
  title Item? @relation(fields: [titleId], references: [id])
}

enum TintColorType {
  default
  fromItem
  dynamic
  custom
}

model DisplayedProfileBadge {
  userId  String
  badgeId Int
  row     Int
  col     Int

  user  User  @relation(fields: [userId], references: [id])
  badge Badge @relation(fields: [badgeId], references: [id])

  @@id([userId, badgeId])
  @@unique([userId, row, col])
}
