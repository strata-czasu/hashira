// NOTE: The following extensions are required for full LSP and formatter support:
// - biome
// - prisma
{
  "tab_size": 2,
  "use_on_type_format": false,

  // NOTE: Language servers and formatters aren't enabled globally for more fine control
  // https://zed.dev/docs/languages/typescript
  // https://biomejs.dev/reference/zed/
  "languages": {
    "TypeScript": {
      "language_servers": [
        "!typescript-language-server",
        "!prisma-language-server",
        "!tailwindcss-language-server",
        "!eslint",
        "!prettier",
        "!vtsls",
        "tsgo",
        "biome",
        "..."
      ],
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.organizeImports.biome": true,
        "source.fixAll.biome": true
      }
    },

    "JavaScript": {
      "language_servers": [
        "!typescript-language-server",
        "!prisma-language-server",
        "!tailwindcss-language-server",
        "!eslint",
        "!prettier",
        "!vtsls",
        "tsgo",
        "biome",
        "..."
      ],
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.organizeImports.biome": true,
        "source.fixAll.biome": true
      }
    },

    "TSX": {
      "language_servers": [
        "!typescript-language-server",
        "!prisma-language-server",
        "!tailwindcss-language-server",
        "!eslint",
        "!prettier",
        "!vtsls",
        "tsgo",
        "biome",
        "..."
      ],
      "formatter": { "language_server": { "name": "biome" } },
      "code_actions_on_format": {
        "source.organizeImports.biome": true,
        "source.fixAll.biome": true
      }
    },

    "JSON": {
      "language_servers": [
        "!typescript-language-server",
        "!prisma-language-server",
        "!tailwindcss-language-server",
        "!eslint",
        "!prettier",
        "!vtsls",
        "!tsgo",
        "biome",
        "..."
      ],
      "formatter": { "language_server": { "name": "biome" } }
    },

    "JSONC": {
      "language_servers": [
        "!typescript-language-server",
        "!prisma-language-server",
        "!tailwindcss-language-server",
        "!eslint",
        "!prettier",
        "!vtsls",
        "!tsgo",
        "biome",
        "..."
      ],
      "formatter": { "language_server": { "name": "biome" } }
    },

    "Prisma": {
      "language_servers": [
        "!typescript-language-server",
        "!tailwindcss-language-server",
        "!eslint",
        "!prettier",
        "!vtsls",
        "!biome",
        "!tsgo",
        "prisma-language-server",
        "..."
      ],
      "formatter": { "language_server": { "name": "prisma-language-server" } }
    },

    "Dockerfile": {
      "tab_size": 4
    }
  }
}
